{
  "name": "eternal-server",
  "version": "1.0.0",
  "description": "Ecofriendly ecommerce site (Backend)",
  "main": "index.js",
  "engines": {
    "node": ">= 8.1.0",
    "npm": ">= 5.0.0"
  },
  "watch": {
    "run": "src"
  },
  "scripts": {
    "clean": "rimraf ./app",
    "copy_config": "cp -r src/config/env app/config/env",
    "lint": "eslint src",
    "install_dependencies:dev": "yarn install",
    "install_dependencies:prod": "yarn install --production",
    "run": "npm run install_dependencies:dev && npm-run-all -p lint build -s jasmine server",
    "server": "node app",
    "start": "npm-watch",
    "jasmine": "jasmine",
    "test": "NODE_ENV=test npm-run-all build jasmine",
    "build": "rimraf ./app && babel src -d app && npm run copy_config"
  },
  "author": "javier.ortizsaorin@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.2.2",
    "babel-preset-node6": "^11.0.0",
    "babel-register": "^6.24.0",
    "deep-freeze": "^0.0.1",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jasmine": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "husky": "^0.13.3",
    "jasmine": "^2.5.3",
    "jasmine-spec-reporter": "^3.2.0",
    "lint-staged": "^3.4.0",
    "npm-run-all": "^4.0.2",
    "npm-watch": "^0.1.8",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "compression": "^1.7.0",
    "express": "^4.15.3",
    "helmet": "^3.8.1",
    "morgan": "^1.8.2",
    "nconf": "^0.8.4",
    "sphere-node-sdk": "^1.19.1",
    "underscore": "^1.8.3",
    "winston": "^2.3.1",
    "winston-papertrail": "^1.0.5"
  }
}
