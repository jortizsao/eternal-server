{
  "name": "eternal-server",
  "version": "1.0.0",
  "description": "Ecofriendly ecommerce site (Backend)",
  "repository": {
    "type": "git",
    "url": "https://github.com/jortizsao/eternal-server-expressjs"
  },
  "main": "index.js",
  "engines": {
    "node": ">= 8.1.0",
    "npm": ">= 5.0.0"
  },
  "watch": {
    "dev": "src"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.spec.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "babel": "babel src -d app",
    "clean": "rimraf ./app",
    "copy_config": "cp -r src/config/env app/config/env",
    "lint": "eslint src",
    "dev": "npm-run-all build server",
    "server": "node app/index.js",
    "start": "npm-watch",
    "jasmine": "nyc jasmine",
    "test": "cross-env NODE_ENV=test npm-run-all build jasmine",
    "build": "npm-run-all lint clean babel copy_config",
    "commitmsg": "validate-commit-msg -p jshint"
  },
  "author": "javier.ortizsaorin@gmail.com",
  "license": "AGPL-3.0",
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.24.0",
    "deep-freeze": "^0.0.1",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jasmine": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "husky": "^0.13.4",
    "jasmine": "^2.8.0",
    "jasmine-spec-reporter": "^3.2.0",
    "lint-staged": "^3.4.0",
    "nock": "^9.0.25",
    "npm-run-all": "^4.0.2",
    "npm-watch": "^0.1.8",
    "nyc": "^11.1.0",
    "rimraf": "^2.6.1",
    "validate-commit": "^3.2.1"
  },
  "dependencies": {
    "@commercetools/api-request-builder": "^3.4.0",
    "@commercetools/sdk-client": "^1.5.2",
    "@commercetools/sdk-middleware-auth": "^3.4.3",
    "@commercetools/sdk-middleware-http": "^2.2.2",
    "@commercetools/sdk-middleware-queue": "^1.1.2",
    "@commercetools/sync-actions": "^1.12.2",
    "apollo-engine": "^1.1.0",
    "apollo-link-context": "^1.0.7",
    "apollo-link-http": "^1.5.2",
    "apollo-server-express": "^1.3.4",
    "awilix": "^2.9.0",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "compression": "^1.7.0",
    "cors": "^2.8.4",
    "cross-env": "^5.1.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.0",
    "graphql": "^0.11.7",
    "graphql-tools": "^2.8.0",
    "helmet": "^3.8.1",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "morgan": "^1.8.2",
    "nconf": "^0.8.4",
    "node-fetch": "^2.0.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "winston": "^2.3.1"
  }
}
